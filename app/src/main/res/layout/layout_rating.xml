<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/tools"
    android:padding="20dp"
    android:id="@+id/layoutRating"
    android:gravity="center_horizontal"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="THANKS FOR USING CALL A MECHANIC"
        android:textSize="24sp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/RatingBar"
        android:rating="0"
        app:mrb_progressTint="@android:color/black"
        app:mrb_secondaryProgressTint="@android:color/darker_gray"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etComment"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:hint="Comments"
        android:textColor="@color/baseReleaseColor"
        android:textColorHint="@color/baseReleaseColor"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/colorPrimary"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorPrimary"
        app:met_singleLineEllipsis="false"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="99dp"
        android:orientation="horizontal"
        android:weightSum="2">
    <Button
        android:id="@+id/btnSubmit"
        android:hint="SUBMIT"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_sign_in_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnLater"
        android:hint="LATER"
        android:textStyle="bold"
        android:textColor="@color/btnRegister"
        android:background="@drawable/btn_register_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        />

    </LinearLayout>

</LinearLayout>